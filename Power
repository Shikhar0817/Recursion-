class Solution:
    def isPowerOfTwo(self, n: int) -> bool:
        if n==1:
            return True
        if n<=0:
            return False
        
        if n%2 != 0:
            return False
        return self.isPowerOfTwo(n//2)


class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        if n <= 0:
            return False
        if n == 1:
            return True
        if n%3 != 0:
            return False
        return self.isPowerOfThree(n//3)


class Solution:
    def isPowerOfFour(self, n: int) -> bool:
        if n <= 0:
            return False
        if n == 1:
            return True
        if n%4 != 0:
            return False
        return self.isPowerOfFour(n//4)
        

        
